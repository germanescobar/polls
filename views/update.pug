extends layout

block content
  div
    form(action=`/polls/${poll._id}`, method="post")
      p Title       
      input(type="text" name="title" placeholder="Title" value=poll.title)
      p Description
      textarea(name="description" cols="30" rows="10" ) !{poll.description}
      br
      label Opcion 1
      input(type="text" name="option1" value=poll.options[0].text) 
      br
      label Opcion 2
      input(type="text" name="option2" value=poll.options[1].text)
      br
      label Opcion 3
      input(type="text" name="option3" value=poll.options[2].text)
      br
      label Opcion 4
      input(type="text" name="option4" value=poll.options[3].text)
      br
      input(type="submit", value="Update")
      
